<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_editProfilePicture"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:src="@drawable/avatar_icon"
            android:layout_margin="@dimen/margin_md"
            android:layout_gravity="center_horizontal"/>

        <android.support.design.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:id="@+id/mc_editProfileFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_sm"
            android:paddingStart="@dimen/padding_md"
            android:paddingEnd="@dimen/padding_md" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_editProfileFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:background="@null"
                android:inputType="text"
                android:hint="First Name" />

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:id="@+id/mc_editProfileLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_sm"
            android:paddingStart="@dimen/padding_md"
            android:paddingEnd="@dimen/padding_md" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_editProfileLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:background="@null"
                android:inputType="text"
                android:hint="Last Name" />

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:id="@+id/mc_editProfileGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_sm"
            android:paddingStart="@dimen/padding_md"
            android:paddingEnd="@dimen/padding_md" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_editProfileGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:background="@null"
                android:inputType="text"
                android:hint="Gender" />

        </android.support.design.card.MaterialCardView>

        <android.support.design.card.MaterialCardView
            style="@style/Widget.MaterialComponents.CardView"
            android:id="@+id/mc_editProfileLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginStart="@dimen/margin_md"
            android:layout_marginEnd="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_sm"
            android:paddingStart="@dimen/padding_md"
            android:paddingEnd="@dimen/padding_md" >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_editProfileLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:background="@null"
                android:inputType="text"
                android:hint="Gender" />

        </android.support.design.card.MaterialCardView>

        <Button
            android:id="@+id/btn_editProfileInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_md"
            android:layout_gravity="center"
            android:text="Save" />

    </LinearLayout>

</ScrollView>