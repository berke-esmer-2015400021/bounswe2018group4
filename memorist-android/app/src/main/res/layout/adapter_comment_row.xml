<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.design.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:id="@+id/mc_commentCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_sm"
        android:layout_marginBottom="@dimen/margin_sm"
        android:paddingStart="@dimen/padding_md"
        android:paddingEnd="@dimen/padding_md"
        android:paddingBottom="@dimen/padding_md"
        android:paddingTop="@dimen/padding_md" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_feedProfilePicture"
                    android:layout_width="@dimen/heightMemoryOwnerAvatar"
                    android:layout_height="@dimen/heightMemoryOwnerAvatar"
                    android:contentDescription="@string/feedProfilePictureContentDescription"
                    android:src="@drawable/avatar_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_md"
                    android:layout_marginEnd="@dimen/margin_md"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_feedUsername"
                        fontPath="fonts/HelveticaNeueCondensedBold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeBigMemory"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_feedPostedTime"
                        fontPath="fonts/HelvaticaNeueCondensedBold.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeBigMemory"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_feedMentionedTime"
                fontPath="fonts/HelvaticaNeue.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:textSize="@dimen/textSizeSmallMemory" />

            <TextView
                android:id="@+id/tv_feedLocation"
                fontPath="fonts/HelvaticaNeue.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:textSize="@dimen/textSizeSmallMemory" />

            <TextView
                android:id="@+id/tv_feedTitle"
                fontPath="fonts/HelvaticaNeueCondensedBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeSmallMemory"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_feedStory"
                fontPath="fonts/HelvaticaNeue.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_xs"
                android:layout_marginEnd="@dimen/margin_md"
                android:textSize="@dimen/textSizeSmallMemory" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginEnd="@dimen/margin_md">

                <android.support.design.card.MaterialCardView
                    android:id="@+id/mc_multimediaCard"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/layoutMultimediaContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                </android.support.design.card.MaterialCardView>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_feedTags"
                fontPath="fonts/HelvaticaNeueCondensedBold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:textColor="@color/tagColor"
                android:textSize="@dimen/textSizeBigMemory"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_feedLike"
                        android:layout_width="@dimen/heightMemoryButton"
                        android:layout_height="@dimen/heightMemoryButton"
                        android:background="@null"
                        android:contentDescription="@string/btnLikeContentDescription"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nolike_icon" />

                    <TextView
                        android:id="@+id/tv_likeCount"
                        fontPath="fonts/HelvaticaNeueCondensedBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_xs"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeBigMemory" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_feedAnnotate"
                        android:layout_width="@dimen/heightMemoryButton"
                        android:layout_height="@dimen/heightMemoryButton"
                        android:background="@null"
                        android:contentDescription="@string/btnAnnotationContentDescription"
                        android:scaleType="fitCenter"
                        android:src="@drawable/annotation_icon" />

                    <TextView
                        android:id="@+id/tv_annotationCount"
                        fontPath="fonts/HelvaticaNeueCondensedBold.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_xs"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeBigMemory" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.design.card.MaterialCardView>

</RelativeLayout>