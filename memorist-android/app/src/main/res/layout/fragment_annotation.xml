<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.card.MaterialCardView
                style="@style/Widget.MaterialComponents.CardView"
                android:id="@+id/annotation_memoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginBottom="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginEnd="@dimen/margin_sm"
                android:paddingStart="@dimen/padding_md"
                android:paddingEnd="@dimen/padding_md"
                android:paddingBottom="@dimen/padding_md"
                android:paddingTop="@dimen/padding_md" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/annotation_feedProfilePicture"
                            android:layout_width="@dimen/heightMemoryOwnerAvatar"
                            android:layout_height="@dimen/heightMemoryOwnerAvatar"
                            android:src="@drawable/avatar_icon"
                            android:contentDescription="@string/feedProfilePictureContentDescription"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_md"
                            android:layout_marginEnd="@dimen/margin_md"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/annotation_feedUsername"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/textSizeBigMemory"
                                fontPath="fonts/HelveticaNeueCondensedBold.ttf" />

                            <TextView
                                android:id="@+id/annotation_feedPostedTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="@dimen/textSizeBigMemory"
                                fontPath="fonts/HelvaticaNeueCondensedBold.ttf"/>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/annotation_feedMentionedTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md"
                        android:textSize="@dimen/textSizeSmallMemory"
                        fontPath="fonts/HelvaticaNeue.ttf" />

                    <TextView
                        android:id="@+id/annotation_feedLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md"
                        android:textSize="@dimen/textSizeSmallMemory"
                        fontPath="fonts/HelvaticaNeue.ttf" />

                    <TextView
                        android:id="@+id/annotation_feedTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md"
                        android:textSize="@dimen/textSizeSmallMemory"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        fontPath="fonts/HelvaticaNeueCondensedBold.ttf" />

                    <TextView
                        android:id="@+id/annotation_feedStory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xs"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md"
                        android:textSize="@dimen/textSizeSmallMemory"
                        fontPath="fonts/HelvaticaNeue.ttf" />

                    <TextView
                        android:id="@+id/annotation_feedTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_md"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md"
                        android:textColor="@color/tagColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSizeBigMemory"
                        fontPath="fonts/HelvaticaNeueCondensedBold.ttf"/>

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:layout_marginStart="@dimen/margin_md"
                        android:layout_marginEnd="@dimen/margin_md" >

                        <android.support.design.card.MaterialCardView
                            style="@style/Widget.MaterialComponents.CardView"
                            android:id="@+id/annotation_multimediaCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/annotationLayoutMultimediaContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:showDividers="none" >

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia1"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia2"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia3"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia4"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia5"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia6"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia7"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia8"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia9"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                                <ImageView
                                    android:id="@+id/annotation_memoryMultimedia10"
                                    android:layout_width="96dp"
                                    android:layout_height="96dp"
                                    android:layout_marginEnd="@dimen/margin_sm"
                                    android:visibility="gone" />

                            </LinearLayout>

                        </android.support.design.card.MaterialCardView>

                    </HorizontalScrollView>

                </LinearLayout>

            </android.support.design.card.MaterialCardView>

            <ListView
                android:id="@+id/annotation_commentList"
                android:layout_width="match_parent"
                android:layout_height="3000dp"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:visibility="gone"
                android:scrollbars="none"
                android:divider="@null" />

            <TextView
                android:id="@+id/annotation_noanottation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_md"
                android:layout_marginEnd="@dimen/margin_md"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_md"
                android:layout_marginBottom="@dimen/margin_md"
                android:text="There is no annotations."/>

        </LinearLayout>

    </ScrollView>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c2f"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_label="Annotations"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/material_design_floating_action_menu_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/annotation_icon"
            fab:fab_label="Add"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>